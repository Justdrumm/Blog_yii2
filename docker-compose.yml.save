version: '3'

services:

  #PHP Service
  php:
    build: ./docker
    container_name: php
    restart: unless-stopped
    volumes:
    - ./:/var/www/
    networks:
      - app-network


  #Nginx Service
  nginx:
    image: nginx:alpine
    container_name: nginx
    restart: unless-stopped
    ports:
      - "8000:80"
      - "443:443"
    volumes:
      - ./:/var/www/
      - ./docker/nginx/conf.d/:/etc/nginx/conf.d/
    networks:
      - app-network

  #MySQL Service
  db:
    image: mysql:5.7.22
    container_name: db
    restart: unless-stopped
    ports:
      - "4022:3306"
    environment:
      MYSQL_DATABASE: blog
      MYSQL_ROOT_PASSWORD: 123456
    volumes:
      - dbdata:/var/lib/mysql
    networks:
      - app-network





#Docker Networks
networks:
  app-network:
    driver: bridge

volumes:
  dbdata:
    driver: local
